<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/public/css/sidenav.css">
    <link rel="stylesheet" href="/public/css/content.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="wrapper">
        <%- include('./partials/sidenav.ejs'); %>
            <div class="main_content">
                <div class="info">
                    <%- include('./partials/header.ejs'); %>
                    <h2>Users Data Base</h2>
                    <div id="contentWrapper">
                        <div>
                            <div class="form-container">
                                <strong>Visit Profile:</strong> <i class="fas fa-user" style="color: #0a36f8;"></i>
                                <div class="usersDiv">
                                    <ul>
                                        <% for(let i=0; i < usersData.length; i++) { %>
                                            <li>
                                                <a href="users/profile/<%= usersData[i]._id %>"><i class="fas fa-user fa-2x iconLink"></i></a>
                                                <strong>Name:</strong> <%= usersData[i].name %> <br>
                                                <strong>Email:</strong> <%= usersData[i].email %> <br>
                                                <strong>Age:</strong> <%= usersData[i].age %> <br>
                                            </li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/public/js/sidenav.js"></script>
</body>

</html>